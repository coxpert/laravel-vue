{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["resources/js/**/*"],
    "exclude": ["node_modules"]
}
